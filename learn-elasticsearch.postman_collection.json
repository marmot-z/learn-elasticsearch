							"raw": "{ \"index\" : { \"_index\" : \"test\", \"_id\" : \"1\" } }\n{ \"field1\" : \"value1\" }\n{ \"delete\" : { \"_id\" : \"2\" } }\n{ \"create\" : { \"_id\" : \"3\" } }\n{ \"field1\" : \"value3\" }\n{ \"update\" : {\"_id\" : \"1\"} }\n{ \"doc\" : {\"field2\" : \"value2\"} }\n",
